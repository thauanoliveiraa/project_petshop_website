@model PetsModel

@{
    ViewData["Title"] = "Página de Pets";
}
<div class="text-center">
    <h1 class="display-4">Realmente deseja Deletar O Pet (@Model.Nome)?</h1>
    <td>
        <a role="button" class="btn btn-danger" asp-route-id="@Model.id" asp-controller="Pets" asp-action="Deletar">Confirmar</a> <!-- BUG FIXING : Mude o nome da action caso dê problema ou então vá na controller digite ctrl + F e digite "var funcionario" que o comentario lá irá ajudar -->
        <a role="button" class="btn btn-secondary" asp-controller="Pets" asp-action="IndexPets">Voltar</a>
    </td>
</div>
