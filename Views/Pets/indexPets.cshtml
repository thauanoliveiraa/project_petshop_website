@model List<PetsModel>

<div class="text-center">
    <h2>Lista de Pets</h2>
   
    <br>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-outline-primary" role="button" asp-controller="Pets" asp-action="Criar">Adicionar Pet</a>
    </div>

    <br>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id Dono</th>
                <th scope="col">Nome</th>
                <th scope="col">Tipo</th>
                <th scope="col">Plano</th>  
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any()){
               int i = 1;
                foreach(PetsModel pet in Model){
                    <tr>
                        <th scope="row">@i</th>

                        <td>@pet.idDono</td>

                        <td>@pet.Nome</td>

                        <td>@pet.TipoPet</td>

                        <td>@pet.Plano</td>

                        <td>
                            <a role="button" class="btn btn-primary" asp-route-id="@pet.id" asp-controller="Pets" asp-action="Editar">Editar</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@pet.id" asp-controller="Pets" asp-action="VerificarDeletar">Deletar</a>
                        </td>
                    </tr>    
                    i++;     
                }
            }
        </tbody>
    </table>
</div>