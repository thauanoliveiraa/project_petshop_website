@model List<PetshopModel>

<div class="text-center">
    <h2>Lista de Funcionários</h2>
   
    <br>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-outline-primary" role="button" asp-controller="Petshop" asp-action="Criar">Adicionar Funcionario</a>
    </div>

    <br>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Gênero</th>
                <th scope="col">Cargo</th>
                <th scope="col">Salário</th>
                <th scope="col">Contato</th>
                <th scope="col">E-mail</th>
                <th scope="col">Endereco</th>      
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any()){
               int i = 1;
                foreach(PetshopModel funcionario in Model){
                    <tr>
                        <th scope="row">@i</th>
                        <td>@funcionario.Nome</td>

                        <td>@funcionario.Genero</td>

                        <td>@funcionario.Cargo</td>

                        <td>@funcionario.Salario</td>

                        <td>@funcionario.Contato</td>

                        <td>@funcionario.Email</td>

                        <td>@funcionario.Endereco</td>

                        <td>
                            <a role="button" class="btn btn-primary" asp-route-id="@funcionario.Id" asp-controller="Petshop" asp-action="Editar">Editar</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@funcionario.Id" asp-controller="Petshop" asp-action="VerificarDeletar">Deletar</a>
                        </td>
                    </tr>    
                    i++;     
                }
            }
        </tbody>
    </table>
</div>